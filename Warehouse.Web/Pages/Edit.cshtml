@page
@using Warehouse.Web.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model EditModel
@{
}
<h1 class="text-light">Изменение свойств</h1>
<div class="col-md-5">
    <form method="post" asp-route="@Model.ItemId">
        <hr />
        <div class="form-floating mb-3">
            <input placeholder="Балка" class="form-control col" type="text" asp-for="Input.Name" />
            <label asp-for ="Input.Name" class="form-label text-light">Название</label>
            <span asp-validation-for="Input.Name" class="text-danger"></span>
        </div>
        <div class=" form-floating mb-3">
            <input placeholder="1000" class="form-control" type="text"  asp-for="Input.Cost" />
            <label asp-for="Input.Cost" class="form-label text-light">Себестоимость</label>
            <span asp-validation-for="Input.Cost" class="text-danger"></span>
            
        </div>
        <div class=" form-floating mb-3">
            <input placeholder="10" class="form-control" type="text"  asp-for="Input.Count" />
            <label asp-for="Input.Count" class="form-label text-light ">Количество</label>
            <span asp-validation-for="Input.Count" class="text-danger"></span>
        </div>
        <div class=" form-floating mb-3">
            <input placeholder="Материал" class="form-control" type="text"  asp-for="Input.Type" />
            <label asp-for="Input.Type" class="form-label text-light">Тип</label>
            <span asp-validation-for="Input.Type" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <button class="form-control btn btn-primary" type="submit" id="send">Save</button>
        </div>
    </form>
</div>