@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<div class="">
    <table class="table table-dark ">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Cost</th>
                <th>Count</th>
                <th class="w-25">Type</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody class="border-white">
            @foreach (var item in Model.items)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Cost</td>
                    <td>@item.Count</td>
                    <td>@item.Type</td>
                    <td>
                        <div class="gap-2 d-inline-block row">
                            <a asp-page="/Edit" asp-route-itemid="@item.Id" class="btn btn-primary text-light col" role="button">Edit</a>
                            <a class="btn btn-primary text-light col" href="#" role="button">Delete</a>
                        </div>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>
